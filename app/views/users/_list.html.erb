
  <div class="row">
    <div class="col-9">
      <table class="table table-bordered table-hover">
        <thead>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Actions</th>
        </thead>
        <tbody>
          <% @friends.each do |friend| %>
            <tr>
              <td><%= friend.first_name %></td>
              <td><%= friend.last_name %></td>
              <td><%= friend.email %></td>
              <td>
                <%= button_to 'Unfollow?', friendship_path(friend), method: :delete, data: { "turbo_method": :delete, "turbo_confirm": "Are you sure?"  },
                                            class: 'btn btn-sm btn-primary' %>
                <%= link_to "View Profile", friend_path(friend), class: "btn btn-sm btn-success"%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
